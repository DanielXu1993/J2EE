<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.xyh.a_collectionMapping">

    <class userName="User" table="t_user">
        <id userName="userId" column="id">
            <generator class="native"></generator>
        </id>
        <property userName="userName"></property>

        <!--
            Set集合映射
                userName 该类中Set集合对象的对象名
                table 该集合对象映射到数据库中的表的名字
                key   该集合对象表中的外键字段,默认与class中配置的表的主键关联
                element 该集合对象表中的其他字段
                    type  该字段在数据库中存储的类型，此时必须要指定，因为无法从上下文中获取
        -->
        <set userName="addressSet" table="t_addressSet">
            <key column="uid"></key>
            <element column="address" type="string"></element>
        </set>

        <!--
            List集合的映射：
            由于List集合是有序的，为了保证往数据库中存取数据是有序的
            需要在数据库表中添加字段idx来记录该条数据在List中的索引
            list-index  指定排序列的名称
        -->
        <list userName="addressList" table="t_addressList">
            <key column="uid"></key>
            <list-index column="idx"></list-index>
            <element column="address" type="java.lang.String"></element>
        </list>
        <!--
            Map集合的映射：
            key     指定外键字段
            map-key 指定map的key
            element 指定map的value
        -->
        <map userName="addressMap" table="t_addressMap">
            <key column="uid"></key>
            <map-key type="java.lang.String" column="shortName"></map-key>
            <element column="address" type="java.lang.String"></element>
        </map>

    </class>

</hibernate-mapping>